<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Flashcard" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/status_bar_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar_color</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyTheme">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="submitButton" parent="Theme.AppCompat">
        <!-- 点击颜色 -->
        <item name="colorControlHighlight">@color/submit_highlight</item>
        <!-- 背景颜色 -->
        <item name="colorButtonNormal">@color/submit_normal</item>
    </style>

    <!-- SplashActivity theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>